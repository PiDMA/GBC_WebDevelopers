@model IEnumerable<GBC_WebDevelopers.Models.Products>

@{
    ViewData["Title"] = "Product Manager";
}

<h1>Product Manager</h1>


<table class="table">
    <thead class="thead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary"><i class="bi bi-pencil-square">&nbsp; Edit</i></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary"><i class="bi bi-trash">&nbsp; Delete</i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle">&nbsp;Add Product</i></a>
</div>

